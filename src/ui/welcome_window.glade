<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="GtkListStore" id="projects_model">
    <columns>
      <column type="gchararray"/>
      <column type="gchararray"/>
    </columns>
  </object>
  <object class="GtkBox" id="root">
    <property name="name">welcome-window</property>
    <property name="orientation">vertical</property>
    <child>
      <object class="GtkBox" id="contents">
        <property name="halign">center</property>
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkBox">
            <property name="halign">start</property>
            <property name="margin-top">40</property>
            <child>
              <object class="GtkImage">
                <property name="margin-end">5</property>
                <property name="icon-name">io.github.hugopl.Tijolo</property>
                <property name="icon_size">GTK_ICON_SIZE_LARGE</property>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="valign">center</property>
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkLabel">
                    <property name="name">tijolo-title</property>
                    <property name="halign">start</property>
                    <property name="label" translatable="yes">Tijolo</property>
                    <property name="use-markup">1</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="version">
                    <property name="name">tijolo-version</property>
                    <property name="halign">start</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkLabel">
            <property name="halign">start</property>
            <property name="margin-top">20</property>
            <property name="margin-bottom">20</property>
            <property name="label" translatable="yes">Lightweight, keyboard-oriented IDE for the masses.</property>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="vexpand">1</property>
            <property name="halign">center</property>
            <property name="spacing">40</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">6</property>
                <child>
                  <object class="GtkBox">
                    <child>
                      <object class="GtkLabel" id="open_project_label">
                        <property name="name">open_project_label</property>
                        <property name="label" translatable="yes">Open Project:</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkEntry" id="open_project_entry">
                        <property name="hexpand">1</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkOverlay" id="overlay">
                    <property name="vexpand">1</property>
                    <property name="child">
                      <object class="GtkScrolledWindow">
                        <property name="width-request">350</property>
                        <property name="margin-bottom">40</property>
                        <property name="vexpand">1</property>
                        <property name="child">
                          <object class="GtkTreeView" id="tree_view">
                            <property name="can-focus">false</property>
                            <property name="model">projects_model</property>
                            <property name="headers-visible">0</property>
                            <property name="enable-search">0</property>
                            <property name="search-column">0</property>
                            <property name="show-expanders">0</property>
                            <child internal-child="selection">
                              <object class="GtkTreeSelection"/>
                            </child>
                            <child>
                              <object class="GtkTreeViewColumn">
                                <property name="title" translatable="yes">Existing Projects</property>
                                <child>
                                  <object class="GtkCellRendererText"/>
                                  <attributes>
                                    <attribute name="markup">0</attribute>
                                  </attributes>
                                </child>
                              </object>
                            </child>
                          </object>
                        </property>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">8</property>
                <child>
                  <object class="GtkButton" id="clone_btn">
                    <property name="label" translatable="yes">Clone Repository...</property>
                    <property name="sensitive">0</property>
                    <property name="receives-default">1</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="rescan_btn">
                    <property name="label" translatable="yes">Rescan Projects</property>
                    <property name="receives-default">1</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
  <object class="GtkSpinner" id="spinner">
    <property name="can-focus">false</property>
    <property name="spinning">true</property>
  </object>
</interface>
